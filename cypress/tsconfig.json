{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "dom"
        ],
        "types": [
            "cypress",
            "node",
            "@testing-library/cypress",
            "@cypress/grep",
            "../node_modules/cypress",
            "@percy/cypress",
        ],
        "baseUrl": "./",
        "allowJs": false,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts",
        "**/index.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}